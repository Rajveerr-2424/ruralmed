# Environment Variables for Rural Healthcare System
# Copy this file to .env.local and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/rural-healthcare
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/rural-healthcare

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-here

# Twilio for Video Calls
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# OpenAI for AI Features
OPENAI_API_KEY=your-openai-api-key

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=development
